<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/a_red"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:background="@drawable/circulogris"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/a_yellow" />

    <View
        android:id="@+id/a_yellow"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:background="@drawable/circulogris"
        app:layout_constraintTop_toBottomOf="@id/a_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/a_green" />

    <View
        android:id="@+id/a_green"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:background="@drawable/circulogris"
        app:layout_constraintTop_toBottomOf="@id/a_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sep" />

    <View
        android:id="@+id/sep"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/a_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/b_red"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:background="@drawable/circulogris"
        app:layout_constraintTop_toBottomOf="@id/sep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b_yellow" />

    <View
        android:id="@+id/b_yellow"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:background="@drawable/circulogris"
        app:layout_constraintTop_toBottomOf="@id/b_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b_green" />

    <View
        android:id="@+id/b_green"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:background="@drawable/circulogris"
        app:layout_constraintTop_toBottomOf="@id/b_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controls" />

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/b_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_devanecido"
            android:text="Iniciar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>